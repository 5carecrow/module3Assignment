    <button id="myButton">Click me to change the image!</button>
    
<script>
    
    const image = document.getElementById("myImage");
    const button = document.getElementById("myButton");

    button.addEventListener("click", function() {
        image.src = 
        "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSwt7_fYkQAuOgKHFfrlqeZupplI86XdcPWvw&usqp=CAU";
    });

</script>
